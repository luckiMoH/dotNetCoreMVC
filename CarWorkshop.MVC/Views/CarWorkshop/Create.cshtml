<h1>Create Car Workshop</h1>
<hr/>

<div class="row">
	<div class="col-md-4">
		<form action="/CarWorkshop/Create" method="post">

			<div class="form-group mb-3">
				<label class="control-label" for="Name">Name</label>
				<input type="text" id="Name" name="Name" class="form-control">
			</div>

			<div class="form-group mb-3">
				<label class="control-label" for="Description">Description</label>
				<input type="text" id="Description" name="Description" class="form-control">
			</div>

			<div class="form-group mb-3">
				<label class="control-label" for="About">About</label>
				<input type="text" id="About" name="About" class="form-control">
			</div>

			<div class="form-group mb-3">
				<label class="control-label" for="PhoneNumber">Phone Number</label>
				<input type="text" id="PhoneNumber" name="ContactDetails.PhoneNumber" class="form-control">
			</div>

			<div class="form-group mb-3">
				<label class="control-label" for="Street">Street</label>
				<input type="text" id="Street" name="ContactDetails.Street" class="form-control">
			</div>

			<div class="form-group mb-3">
				<label class="control-label" for="City">City</label>
				<input type="text" id="City" name="ContactDetails.City" class="form-control">
			</div>

			<div class="form-group mb-3">
				<label class="control-label" for="PostalCode">Postal Code</label>
				<input type="text" id="PostalCode" name="ContactDetails.PostalCode" class="form-control">
			</div>

			<div class="form-group mb-3">
				<input type="submit" value="Create" class="btn btn-primary">
			</div>

		</form>
	</div>
</div>