@model List<Person> // definicja typu ktory zostal przekazany przez kontroler

@{
    ViewData["Title"] = "Privacy Policy";
    var currentYear = DateTime.Now.Year;
    var dayOfWeek = DateTime.Now.DayOfWeek;
    var email = "test@wp.pl";
    int number = 0;

}

<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<p>it is @currentYear :)</p>

<p>To jest moja liczba <span id="numberValue">@number</span></p>
<div>
    <button class="btn btn-primary" onclick="incrementNumber()">+</button>
<button class="btn btn-primary" onclick="decreaseNumber()">-</button>
</div>

@if (dayOfWeek == DayOfWeek.Sunday || dayOfWeek == DayOfWeek.Saturday) 
{
    <p>It's weekend</p>
} else 
{
    <p>Not yet the weekend :(</p>
}

@switch(dayOfWeek)
{
    case DayOfWeek.Monday:
        <p>It's Monday :(</p>
        break;
    default:
        <p>It's not Monday :)</p>
        break;
}

<p>Test</p>

<a href=mailto:@email>@email</a>

@foreach(var person in Model)
{
    <p>@person.FirstName | @person.LastName</p>

}

<script>
    let number = @number;
    const numberSpan = document.getElementById('numberValue');
    const incrementNumber = () => {
        number +=1;
        numberSpan.innerText = number;
        console.log(number)
    }
    const decreaseNumber = () => {
        number -= 1;
        numberSpan.innerText = number;
        console.log(number)
    }
</script>
@Model 